{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "types": ["node", "express"],
    "typeRoots": ["./node_modules/@types", "./types", "./src"] 
  },
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["node_modules"]
}
